# Set up a few useful definitions
fset show(x) "%%" + x + " yields: " + char(34) + "%" + x + char(34) + "% and %%*" + x + " yields: " + char(34) + "%*" + x + char(34) + "%"
set a trigger(today()+2) + " ++2"
set l language()
set tt now()+134
set tu now()-134
set ut now()+60
set uu now()-60
set vt now()+120
set vu now()-120
set wt now()-1
set wu now()+1
set xt now()-2
set xu now()+2

set d a + " at " + tt
set e a + " at " + tu
set f a + " at " + ut
set g a + " at " + uu
set h a + " at " + wt
set j a + " at " + wu
set k a + " at " + xt
set m a + " at " + xu

